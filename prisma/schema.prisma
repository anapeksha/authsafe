generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String
  password  String
  name      String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  apiKeys   ApiKey[]
  tokens    Token[]
  roles     Role[]

  @@unique([email])
}

model Token {
  id        String   @id @default(cuid())
  userId    String
  token     String   @default(uuid())
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])

  @@unique([token])
}

model ApiKey {
  id        String   @id @default(cuid())
  userId    String
  key       String   @default(uuid())
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])

  @@unique([key])
}

model Role {
  id          String       @id @default(cuid())
  userId      String
  permissions Permission[] @default([])
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        User         @relation(fields: [userId], references: [id])
}

enum Permission {
  READ
  EDIT
  FULL_CONTROL
}
